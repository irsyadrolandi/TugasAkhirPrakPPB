<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24">


        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Account Information"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="16dp" />
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:radius="20dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:src="@drawable/young"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_width="120dp"
            android:layout_height="100dp">
        </ImageView>

        <TextView
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="Muhammad Irsyad Rolandi"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="270dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <TextView
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Me">
        </TextView>

        <TextView
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profesional TI yang berorientasi detail dengan pengalaman 10 tahun sebagai software support specialist dan system/network technician. Terampil dalam mengoperasikan berbagai platform, memiliki kemampuan komunikasi lisan dan verbal yang baik, dan mampu menjelaskan masalah software yang kompleks dalam istilah yang mudah dipahami."/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="450dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <TextView
            android:layout_marginTop="60dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:text="Find Me"
            android:textAlignment="center"
            android:textSize="25dp">
        </TextView>

        <ImageView
            android:layout_marginTop="60dp"
            android:layout_marginLeft="260dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/recruiter">
        </ImageView>

        <ImageView
            android:layout_marginTop="120dp"
            android:layout_marginLeft="100dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/instagram">
        </ImageView>

        <ImageView
            android:layout_marginTop="120dp"
            android:layout_marginLeft="150dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/linkedin">
        </ImageView>

        <ImageView
            android:layout_marginTop="120dp"
            android:layout_marginLeft="200dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook">
        </ImageView>

        <ImageView
            android:layout_marginTop="120dp"
            android:layout_marginLeft="250dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/github">
        </ImageView>

        <ImageView
            android:layout_marginTop="120dp"
            android:layout_marginLeft="300dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/twitter">
        </ImageView>
    </RelativeLayout>
</RelativeLayout>
